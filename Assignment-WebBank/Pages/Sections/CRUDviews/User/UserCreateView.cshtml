@page
@model Assignment_WebBank.Pages.Sections.CRUDviews.UserCreateViewModel
@{
    var successMessage = ViewData["Message"]?.ToString();
}

<div class="d-flex justify-content-center pt-5">
    <h1 style="color: #cc1616;">Create User</h1>
</div>

<div class="red-line">
    <div style="background:#cc1616; height: 1px; width: 400px; justify-self: center;"></div>
</div>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="d-flex justify-content-center">
        <div data-aos="fade-down" class="alert ok-message-holder" role="alert">
            <div class="message-container">
                @successMessage
            </div>

        </div>
    </div>
}

<div class="d-flex justify-content-around m-0">
    <div data-aos="fade-up" style="padding-bottom: 600px; width: 400px;">

        <form method="post" asp-page-handler="OnPostCreateUserAsync">
            <div class="form-group">
                <label for="UserVM.UserName">User Name</label>
                <input asp-for="UserName" name="UserName" class="form-control" autocomplete="off" />
                <div class="d-flex justify-content-center">
                    <span style="color: #cc1616" class="field-validation-error" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="UserVM.Email">Email</label>
                <input asp-for="Email" name="Email" class="form-control" autocomplete="off" />
                <div class="d-flex justify-content-center">
                    <span style="color: #cc1616" class="field-validation-error" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="Password" type="password" name="Password" class="form-control" autocomplete="off" />
                <div class="d-flex justify-content-center">
                    <span style="color: #cc1616" class="field-validation-error" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="radio-input my-4">
                <label for="Role" class="mx-5">Role:</label>

                <label class="form-check-label mx-2" for="value-1">Admin</label>
                <input value="Admin" name="Role" id="value-1" type="radio">

                <div class="plus1">
                    <div class="plus2"></div>
                </div>

                <label class="form-check-label mx-2" for="value-2">Cashier</label>
                <input value="Cashier" name="Role" id="value-2" type="radio" checked="">

                <div class="plus1">
                    <div class="plus2"></div>
                </div>
            </div>


            <div class="d-flex justify-content-center">
                <button type="submit" class="button">
                    <span class="actual-text">&nbsp;Create&nbsp;</span>
                    <span class="hover-text" aria-hidden="true">&nbsp;Create&nbsp;</span>
                </button>
            </div>

            <div class="red-line">
                <div style="background:#cc1616; height: 1px; width: 400px; justify-self: center;"></div>
            </div>


            <div class="d-flex justify-content-around">
                <a asp-page="/Index" class="btn-lines">BACK</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}