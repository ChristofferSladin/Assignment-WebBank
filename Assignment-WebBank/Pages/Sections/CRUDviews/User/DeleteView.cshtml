@page
@model Assignment_WebBank.Pages.Sections.CRUDviews.User.DeleteViewModel
@{
}

<div class="d-flex justify-content-center pt-5">
    <h1 style="color: #cc1616;">Delete User</h1>
</div>

<div class="red-line">
    <div style="background:#cc1616; height: 1px; width: 400px; justify-self: center;"></div>
</div>

<div data-aos="fade-up">
    <div class="d-flex justify-content-center">
        <div class="d-flex">
            <div class="mx-1">Are you sure you want to delete user with ID:</div>
            <p class="mx-1" style="color: #cc1616;"> @Model.UserId </p>
            <div class="mx-1">?</div>
        </div>
    </div>


    <div class="d-flex justify-content-center pb-5">
        <div>
            <form method="post">
                <input type="hidden" asp-for="UserId" />
                <button class="btn-lines" type="submit">Yes, delete</button>
                <a class="btn-lines" asp-page="/Sections/CRUDviews/User/UserDeleteView">No, cancel</a>
            </form>
        </div>
    </div>
</div>
