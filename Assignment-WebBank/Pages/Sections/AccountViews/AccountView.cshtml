@page
@model Assignment_WebBank.Pages.Sections.AccountViews.AccountViewModel
@{
    var oneCustomer = Model.OneCustomer;
}

<div class="card">
    <div class="card-header">

        <h3 class="d-flex justify-content-center my-5">@oneCustomer.FirstName @oneCustomer.LastName Account</h3>

        <div class="d-flex justify-content-around m-t-25">
            <a asp-page="/Sections/AccountViews/WithdrawView" asp-route-customerId="@oneCustomer.CustomerId" asp-route-accountId="@Model.OneAccount.AccountId"><i class="btn-lines">Withdraw</i></a>
            <a asp-page="/Sections/AccountViews/TransferView" asp-route-customerId="@oneCustomer.CustomerId" asp-route-accountId="@Model.OneAccount.AccountId"><i class="btn-lines">Transfer</i></a>
            <a asp-page="/Sections/AccountViews/DepositView" asp-route-customerId="@oneCustomer.CustomerId" asp-route-accountId="@Model.OneAccount.AccountId"><i class="btn-lines">Deposit</i></a>

        </div>

    </div>
    <div class="card-body" data-aos="fade-up">
        <table class="table">
            <tr style="color: #cc1616;">
                <th>Account ID</th>
                <th>Balance</th>
                <th>Date</th>
            </tr>
            @foreach (var acc in Model.Accounts)
            {
                <tr style="color: white;">
                    <td>@acc.AccountId</td>
                    <td>@acc.Balance</td>
                    <td>@acc.CreatedDate</td>
                </tr>
            }
        </table>
        <div class="d-flex justify-content-center">
            <a asp-page="/Sections/CustomerViews/CustomerCardView" asp-route-customerId="@oneCustomer.CustomerId" asp-route-accountId="@Model.AccountId" class="btn-lines">BACK</a>
        </div>
    </div>
</div>