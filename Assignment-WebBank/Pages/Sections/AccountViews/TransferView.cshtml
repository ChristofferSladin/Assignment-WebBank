@page
@model Assignment_WebBank.Pages.Sections.AccountViews.TransferViewModel
@{
    var oneCustomerId = Model.OneCustomer.CustomerId;
    var oneAccountId = Model.OneAccount.AccountId;

    var successMessage = ViewData["Message"]?.ToString();

}
<div>
    <h1 class="d-flex justify-content-center py-5" style="color:#cc1616;">Transfer</h1>
    <h2 class="d-flex justify-content-center" style="color: #cc1616;">
        Balance <span style="color: white;">: @Model.OneAccount.Balance.ToString("c")</span>
    </h2>
</div>

<div class="red-line">
    <div style="background:#cc1616; height: 1px; width: 400px; justify-self: center;"></div>
</div>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="d-flex justify-content-center">
        <div data-aos="fade-down" class="alert ok-message-holder" role="alert">
            <div class="message-container">
                @successMessage
            </div>
        </div>
    </div>
}


<div class="offset-md-4 col-md-4" data-aos="fade-up">
    <form method="post" style="padding-bottom: 600px;">
        <div class="textInputWrapper">

            <label asp-for="ToAccountId">Transfer to:</label>
            <input class="textInput" asp-for="ToAccountId" />
            <div class="d-flex justify-content-center">
                <span style="color: #cc1616" class="field-validation-error" asp-validation-for="ToAccountId"></span>
            </div>

        </div>
        <div class="textInputWrapper">

                    <label asp-for="Amount">Amount</label>
                    <input class="textInput" asp-for="Amount" />
                    <div class="d-flex justify-content-center">
                        <span style="color: #cc1616" class="field-validation-error" asp-validation-for="Amount"></span>
                    </div>

        </div>
        <div class="textInputWrapper">

                    <label asp-for="TransferDate">Date</label>
                    <input id="birthday" class="textInput" asp-for="TransferDate" />
                    <div class="d-flex justify-content-center">
                        <span style="color: #cc1616" class="field-validation-error" asp-validation-for="TransferDate"></span>
                    </div>

        </div>
        <div class="textInputWrapper">

                    <label asp-for="Comment">Comment</label>
                    <input class="textInput" asp-for="Comment" />
                    <div class="d-flex justify-content-center">
                        <span style="color: #cc1616" class="field-validation-error" asp-validation-for="Comment"></span>
                    </div>

        </div>

        <div class="red-line">
            <div style="background:#cc1616; height: 1px; width: 400px; justify-self: center;"></div>
        </div>

        <div class="d-flex justify-content-around my-3">
            <a asp-page="/Sections/AccountViews/AccountView" asp-route-customerId="@oneCustomerId" asp-route-accountId="@oneAccountId" class="btn-lines">BACK</a>
            <button type="submit" class="btn-lines">Transfer</button>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}