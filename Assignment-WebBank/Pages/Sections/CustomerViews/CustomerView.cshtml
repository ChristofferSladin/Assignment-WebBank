@page
@using Assignment_WebBank.Model
@model Assignment_WebBank.Pages.Sections.CustomerViews.CustomerViewModel
@{  
}
<h1 class="d-flex justify-content-center" style="padding-top: 30px;">Customers</h1>
<h3 style="text-align: center;">Page @Model.CurrentPage of @Model.PageCount   </h3>

<div @*data-aos="fade-up"*@>

    <div class="d-flex justify-content-center" style="padding-top: 30px; padding-bottom: 30px;">
        <form method="get">
            <input placeholder="Search" asp-for="@Model.Q" />
            <input type="hidden" asp-for="@Model.CustomerId" />
            <input type="submit" value="Search" class="redbuttonhover" />
        </form>
    </div>

    <table class="table table-#141414" style="color: white;">
        <thead>
            <tr>
                <th>
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Id"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-up"></i>
                    </a>
                    ID
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Id"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-down"></i>
                    </a>
                </th>
                <th>
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Name"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-up"></i>
                    </a>
                    Name
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Name"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-down"></i>
                    </a>
                </th>
                <th>
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Country"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-up"></i>
                    </a>
                    Country
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="Country"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-down"></i>
                    </a>
                </th>
                <th>
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="asc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-up"></i>
                    </a>
                    City
                    <a asp-page="/Sections/CustomerViews/CustomerView"
                       asp-route-sortColumn="City"
                       asp-route-sortOrder="desc"
                       style="text-decoration:none">
                        <i class="fa-solid fa-arrow-down"></i>
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers != null)
            {
                @foreach (var customer in Model.Customers.Results)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.FirstName @customer.LastName</td>
                        <td>@customer.Country</td>
                        <td>@customer.City</td>
                        <td>
                            <a asp-page="/Sections/CustomerViews/CustomerCardView" asp-route-customerId="@customer.CustomerId" class="btn-lines">View Details</a>
                        </td>
                    </tr>
                }
                
            }
        </tbody>
    </table>
</div>

@if (Model.Customers != null)
{

    <div class="d-flex justify-content-between my-3">
        @if (Model.CurrentPage > 1)
        {
            <div colspan="2">
                <a class="btn btn-secondary"
           asp-page="/Sections/CustomerViews/CustomerView"
           asp-route-customerId="@Model.CustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="@(Model.CurrentPage-1)">
                    Prev
                </a>
            </div>
        }
        else
        {
            <div></div>
        }


        <div>
            @if (Model.PageCount > 0)
            {
                string activeLink = "btn-secondary";
                if (Model.CurrentPage == 1)
                {
                    activeLink = "redbuttonhover";
                }

                <a class="btn @activeLink"
           asp-page="/Sections/CustomerViews/CustomerView"
           asp-route-customerId="@Model.CustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="1">
                    1
                </a>

                @if (Model.CurrentPage > 4)
                {
                    <span>...</span>
                }

                @for (int i = Math.Max(Model.CurrentPage - 2, 2); i <= Math.Min(Model.CurrentPage + 2, Model.PageCount - 1); i++)
                {
                    activeLink = "btn-secondary";
                    if (i == Model.CurrentPage)
                    {
                        activeLink = "redbuttonhover";
                    }

                    <a class="btn @activeLink"
           asp-page="/Sections/CustomerViews/CustomerView"
           asp-route-customerId="@Model.CustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="@i">
                        @i
                    </a>
                }

                @if (Model.CurrentPage < Model.PageCount - 3)
                {
                    <span>...</span>
                }

                activeLink = "btn-secondary";
                if (Model.CurrentPage == Model.PageCount)
                {
                    activeLink = "redbuttonhover";
                }

                <a class="btn @activeLink"
           asp-page="/Sections/CustomerViews/CustomerView"
           asp-route-customerId="@Model.CustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="@Model.PageCount">
                    @Model.PageCount
                </a>
            }
        </div>

        @if (Model.CurrentPage != Model.PageCount)
        {
            <div>
                <a class="btn btn-secondary"
           asp-page="/Sections/CustomerViews/CustomerView"
           asp-route-customerId="@Model.CustomerId"
           asp-route-q="@Model.Q"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder"
           asp-route-pageNo="@(Model.CurrentPage+1)">
                    Next
                </a>
            </div>
        }
        else
        {
            <div></div>
        }
    </div>
}

