@page
@model Assignment_WebBank.Pages.Sections.GeneralViews.ContactModel
@{
}
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <span>Contact</span>

            <p style="margin-top: 50px;">Fill the form with valid information and we will get back to you as soon as possible</p>
        </div>

    </div>

    <div class="row" data-aos="fade-up" style="display: flex; justify-content: center; margin-bottom: 400px;">

        <div class="col-lg-6">
            <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                <div class="d-flex">
                    <div class="col-md-6 textInputWrapper">
                        <input type="text" name="name" class="textInput" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="col-md-6 textInputWrapper">
                        <input type="email" class="textInput" name="email" id="email" placeholder="Your Email" required>
                    </div>
                </div>
                <div class="textInputWrapper mt-3">
                    <input type="text" class="textInput" name="subject" id="subject" placeholder="Subject" required>
                </div>
                <div class="textInputWrapper mt-3">
                    <textarea class="textInput" name="message" rows="5" placeholder="Message" required></textarea>
                </div>
                <div class="my-3">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn-lines" type="submit">Send</button>
                </div>
            </form>
        </div>

    </div>
</section><!-- End Contact Section -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}