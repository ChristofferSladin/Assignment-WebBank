<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Bank Of Scandinavia</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/img/red-bank-icon.png" rel="icon">
    <link href="~/img/red-bank-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <!-- Main CSS File -->
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CustomerCardView.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DepoWithSucces.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Search.css" asp-append-version="true" />

    <!-- FONT AWESOME CDN: CONTENT DELIVERY NETWORK -->
    <link rel="stylesheet" 
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<header id="header" class="d-flex align-items-center" style="padding-bottom: 40px;">
    <div class="container d-flex align-items-center justify-content-between">

        <h1 class="logo"><a style="color: #cc1616;" href="/">Bank Of Scandinavia</a></h1>

        @if (User.IsInRole("Admin"))
        {
            <nav id="navbar" class="navbar" >
                <ul class="d-flex flex-row" style="font-weight: 700; font-size: 1em !important;">
                    <li class="dropdown" style="position: relative; top: calc(100% - 35px);">
                        <a style="color:white;"><span>CRUD Menu</span> <i class="bi bi-chevron-down"></i></a>
                        <ul style="background: #141414;">
                            <li><a asp-page="/Sections/CRUDviews/User/UserCreateView" style="color: white;">Create New User</a></li>
                            <li><a asp-page="/Sections/CRUDviews/User/UserUpdateView" style="color: white;">Update Existing User</a></li>
                            <li><a asp-page="/Sections/CRUDviews/User/UserDeleteView" style="color: white;">Delete User</a></li>

                            <li class="dropdown">
                                <a style="color:white;"><span>CRUD Customer</span> <i class="bi bi-chevron-right"></i></a>
                                <ul style="background: #141414;">
                                    <li><a asp-page="/Sections/CRUDviews/Customer/CreateCustomerView" style="color: white;">Create New Customer</a></li>
                                    <li><a asp-page="/Sections/CRUDviews/Customer/ReadCustomers" style="color: white;">Update Existing Customer</a></li>
                                </ul>
                            </li>
                            
                        </ul>
                    </li>
                </ul>
            </nav>
        }

        <nav id="" class="">
            <ul class="d-flex flex-row">
                
                @if (User.IsInRole("Cashier"))
                {
                   <li>
                    <button class="button" style="position: relative; top: calc(100% - 25px);">
                        <a asp-page="/Sections/CustomerViews/CustomerView">
                            <span style="color: white;" class="actual-text">&nbsp;Customers&nbsp;</span>
                            <span class="hover-text" aria-hidden="true">&nbsp;Customers&nbsp;</span
                        </a>
                    </button>
                    
                </li>
                        
                 
                }
                <li>
                    <button class="button" style="position: relative; top: calc(100% - 25px);">
                        <a asp-page="/Sections/GeneralViews/About">
                            <span style="color: white;" class="actual-text">&nbsp;About&nbsp;</span>
                            <span class="hover-text" aria-hidden="true">&nbsp;About&nbsp;</span
                        </a>
                    </button>
                    
                </li>
                

                <li>
                    <button class="button" style="margin-right: 30px; position: relative; top: calc(100% - 25px);">
                        <a asp-page="/Sections/GeneralViews/Contact">
                            <span style="color: white;" class="actual-text">&nbsp;Contact&nbsp;</span>
                            <span class="hover-text" aria-hidden="true">&nbsp;Contact&nbsp;</span
                        </a>
                    </button>
                    
                </li>

                <li><partial name="_LoginPartial" /></li>
            </ul>
        </nav>
    </div>
</header>

<main id="main">
    @RenderBody()
</main>

<footer id="footer" style="padding-top: 200px;">
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-info">
                        <h3>Bank Of Scandinavia</h3>
                        <p>
                            Kung Gustavs Gata <br>
                            Stockholm 147 08, Sweden<br><br>
                            <strong>Phone:</strong>+46 55 555 55 55<br>
                            <strong>Email:</strong> info@bankscandinavia.com<br>
                        </p>
                        <div class="social-links mt-3">
                            <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                            <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><i class="bx bx-chevron-right"></i> <a asp-page="/Index">Home</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a asp-page="/Sections/GeneralViews/About">About us</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a asp-page="/Sections/GeneralViews/Contact">Contact us</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 footer-newsletter">
                    <h4>Our Newsletter</h4>
                    <p>Subscribe to our Newsletter to Always get the Latest from Us</p>
                    <form action="" method="post">
                        <input type="email" name="email"><input type="submit" value="Subscribe">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="copyright">
            &copy; Copyright <strong><span>Bank Of Scandinavia</span></strong>. All Rights Reserved
        </div>
    </div>
</footer>

<a href="" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
<script src="~/vendor/aos/aos.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/vendor/php-email-form/validate.js"></script>

<script src="~/js/main.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</html>