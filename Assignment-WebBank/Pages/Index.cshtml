@page
@using Assignment_WebBank.Model
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section id="hero" class="d-flex align-items-center" style="height: 1200px;">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="500" style="margin-bottom: 800px;">
        <h1 style="color: #cc1616;">Welcome To Bank Of Scandinavia</h1>
        <h2>We are here to help You with the financial parts of life</h2>
        <a href="/" class="btn-lines">Get Started</a>
    </div>

    <div data-aos="fade-up" class="container" style="margin-bottom: 150px; display: flex; justify-content: center; align-items: center; position: absolute; bottom: 0; left: 0; right: 0;">
        <div class="row">
            @foreach (var country in new[] { "Sweden", "Norway", "Denmark", "Finland" })
            {
                <div class="col-lg-3">
                    <div class="card text-center" style="background: transparent; border: none;">
                        <a><img src="~/img/flags/@(country).png" class="card-img-top" style="height: 200px; width: 200px;"></a>
                        <div class="card-body" style="background: #141414;">
                            @foreach (var c in Model.TotBalanceTotAccountCountry.Where(c => c.Country == country))
                            {
                                <div class="card-text text-white"><i class="fas fa-globe-americas mr-2" style="color: #cc1616; margin-right: 5px;"></i>@c.Country</div>
                                <div class="card-text text-white"><i class="fas fa-users mr-2" style="color: #cc1616; margin-right: 5px;"></i>@c.CustomerCount Customers</div>
                                <div class="card-text text-white"><i class="fas fa-receipt mr-2" style="color: #cc1616; margin-right: 5px;"></i>@c.AccountCount Accounts</div>
                                <div class="card-text text-white"><i class="fas fa-money-bill mr-2" style="color: #cc1616; margin-right: 5px;"></i>@c.TotalBalance.ToString("C") :-</div>
                            }
                        </div>
                        <div class="d-flex justify-content-center m-t-15" >
                            <a asp-area="" asp-page="/Sections/CustomerViews/@(country)View" asp-route-country="@country" class="btn-lines"><div>Show Top 10</div></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



