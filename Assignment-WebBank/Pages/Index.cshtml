@page
@using Assignment_WebBank.Model
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">
        <div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
            <h1>Welcome To Bank Of Scandinavia</h1>
            <h2>We are here to help You with the financial parts of life</h2>
            <a href="/" class="btn-get-started scrollto">Get Started</a>
        </div>
    </section><!-- End Hero -->

    <h1 class="country-title">Customers from Our Countrys</h1>

    <div class="boxWithFourBoxes">
        <div class="box-of-content">
            <a href="#"><img src="~/img/flags/sweden-flag-removebg-preview.png" style="height: 150px; width: 150px;"></a>



            <a class="nav-link" asp-area="" asp-page="/Index">Sweden</a>




        </div>
        <div class="box-of-content">
            <a href="#"><img src="~/img/flags/norway-flag.png" style="height: 150px; width: 150px;"></a>
        </div>
        <div class="box-of-content">
            <a href="#ml"><img src="~/img/flags/denmark-flag-org-removebg-preview.png" style="height: 150px; width: 150px;"></a>
        </div>
        <div class="box-of-content">
            <a href="#"><img src="~/img/flags/finland-flag-org-removebg-preview.png" style="height: 150px; width: 150px;"></a>
        </div>
    </div>


    <div class="rowWithCols">


        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white" scope="col">Sweden</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model.CountriesAccounts.Where(c => c.Country == "Sweden"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white" scope="col">Norway</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model.CountriesAccounts.Where(c => c.Country == "Norway"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white" scope="col">Denmark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model.CountriesAccounts.Where(c => c.Country == "Denmark"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white" scope="col">Finland</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model.CountriesAccounts.Where(c => c.Country == "Finland"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

