            </thead>
            <tbody>
                @foreach (var country in Model.Countries.Where(c => c.Country == "Denmark"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white" scope="col">Finland</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model.Countries.Where(c => c.Country == "Finland"))
                {
                    <tr class="d-block">
                        <td class="text-white">@country.Id</td>
                        <td class="text-white">@country.Balance</td>
                        <td class="text-white">@country.Country</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

