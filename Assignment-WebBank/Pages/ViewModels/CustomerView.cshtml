@page
@model Assignment_WebBank.Pages.ViewModels.CustomerViewModel
@{
    <h1 class="d-flex justify-content-center">Customers</h1>

    <table>
        <thead>
            <tr>
                <th>
                    ID
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Id"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Id"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th>
                    Name
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Name"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th>
                    Country
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Country"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="Country"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
                <th>
                    City
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="asc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <a asp-page="/CustomerView"
                   asp-route-sortColumn="City"
                   asp-route-sortOrder="desc"
                   style="text-decoration:none">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Country</td>
                    <td>@customer.City</td>
                    <td><a asp-page="/Country" asp-route-id="@customer.Id" class="btn btn-primary">View</a></td>
                </tr>
            }
        </tbody>
    </table>


}
