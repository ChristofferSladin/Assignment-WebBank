@page
@model Assignment_WebBank.Pages.ViewModels.AccountViews.DepositViewModel
@{
    var oneCustomerId = Model.OneCustomer.CustomerId;
    var oneAccountId = Model.OneAccount.AccountId;
}
<h1>Deposit</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input class="form-control" asp-for="Amount" />
        <span class="field-validation-error" asp-validation-for="Amount"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepositDate">Date</label>
        <input class="form-control" asp-for="DepositDate" />
        <span class="field-validation-error" asp-validation-for="DepositDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment">Comment</label>
        <input class="form-control" asp-for="Comment" />
        <span class="field-validation-error" asp-validation-for="Comment"></span>
    </div>
    <button type="submit" class="btn-lines">Deposit</button>
</form>
