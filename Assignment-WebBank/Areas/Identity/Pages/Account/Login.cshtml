@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div data-aos="fade-up" style="margin: 100px; box-shadow: 0 0 30px rgba(214, 215, 216, 0.6); width: 87%;">
    
    <div class="row" style="display: flex; justify-content:center;">
        <h1 style="display: flex; justify-content: center; align-items: center; margin-top: 50px;">@ViewData["Title"]</h1>
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="textInputWrapper" style="margin-bottom: 10px;">
                        <label asp-for="Input.Email" style="color: #cc1616;" class="form-label"></label>
                        <input asp-for="Input.Email" class="textInput" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="textInputWrapper" style="margin-bottom: 10px;">
                        <label asp-for="Input.Password" style="color: #cc1616;" class="form-label"></label>
                        <input asp-for="Input.Password" class="textInput" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input form-check-input-red" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                    
                    <div>
                        <div class="d-flex justify-content-center mt-3">
                            <button id="login-submit" type="submit" class="button">
                                <span class="actual-text">&nbsp;Login&nbsp;</span>
                                <span class="hover-text" aria-hidden="true">&nbsp;Login&nbsp;</span>
                            </button>
                        </div>
                        
                    </div>
                    <div>
                        
                        @* <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
